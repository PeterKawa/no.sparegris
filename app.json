  "compatibility": ">=5.0.0",
  "sdk": 3,
  "platforms": [
    "local"
  ],
  "name": {
    "en": "Piggy Bank",
    "no": "Sparegris"
  },
  "description": {
    "en": "Save money by controlling when to use energy",
    "no": "Spar penger ved å flytte strømforbruket"
  },
  "category": [
    "energy"
  ],
  "images": {
    "small": "/assets/images/small.png",
    "large": "/assets/images/large.png",
    "xlarge": "/assets/images/xlarge.png"
  },
  "contributing": {
    "donate": {
      "githubSponsors": {
        "username": "frodeheg"
      }
    }
